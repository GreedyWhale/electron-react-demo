{
  "name": "i18n_accelerator_pc",
  "version": "1.0.0",
  "description": "A good accelerator",
  "main": "dist/main.js",
  "repository": "git@192.168.2.82:muggle/i18n_accelerator_pc.git",
  "author": "caisr <383911973@qq.com>",
  "license": "MIT",
  "scripts": {
    "watch:main": "node tools/reloadElectron.js",
    "build:main": "webpack build --config ./webpack/config/main.js",
    "watch:renderer": "webpack serve --config ./webpack/config/renderer.js",
    "build:renderer": "webpack build --config ./webpack/config/renderer.js",
    "start:electron": "electron .",
    "start": "cross-env NODE_ENV=development NODE_PORT=9527 run-p watch:main build:main watch:renderer",
    "build": "electron-builder",
    "fix": "eslint --fix src/**/*.{ts,tsx}"
  },
  "build": {
    "appId": "CompanyName.ProductName.SubProduct.VersionInformation",
    "productName": "i18n_accelerator_pc",
    "copyright": "Copyright Â© year ${author}",
    "directories": {
      "output": "app"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.13.9",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-loader": "^8.2.2",
    "chokidar": "^3.5.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-webpack-plugin": "^5.2.0",
    "log-symbols": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "tree-kill": "^1.2.2",
    "typescript": "^4.2.2",
    "wait-on": "^5.2.1",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
